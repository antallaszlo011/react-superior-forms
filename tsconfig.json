{
    "compilerOptions": {
        "noImplicitAny": false,
        "noImplicitThis": true,

        "moduleResolution": "node",
        "isolatedModules": false,
        "esModuleInterop": true,
        "skipLibCheck": false,

        "module": "es6",
        "target": "es5",
        "lib": [ "es2015", "dom" ],

        "sourceMap": true,
        "declaration": true,

        "jsx": "react",

        "allowJs": true,
        "checkJs": true,

        "typeRoots": ["./src/js/ts/@types", "./node_modules/@types"],

        "baseUrl": ".",
        "paths": {
            "styles/*": ["src/scss/*"],
            "modules/*": ["src/js/includes/modules/*"],
            "constants/*": ["src/js/includes/constants/*"],
            "typings/*": ["src/js/includes/typings/*"]
        },

        "rootDir": "src",
        "outDir": "lib"
    },
    "include": ["src/**/*"]
}